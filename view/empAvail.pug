button.back.btn.btn-success
  a(href="/dashboard") Back To Dashboard
button.logout.btn.btn-danger
  a(href="/auth/logout") Log Out

.card.card-block
  .card-header Create Availability
  .card-body
    form#registerForm(method="POST", action="/dashboard/employee/book-slot")
      .form-group
        label(for="date1") Select Date
        input.form-control(type="text", name="book-date", id="date1", readonly)
      .form-group
        label(for="startTime") Select Start Time
        input.form-control(type="text", name="book-start", id="startTime", readonly)
      .form-group
        label(for="endTime") Select End Time
        input.form-control(type="text", name="book-end", id="endTime", readonly)
      .form-group
        label(for="timeZone") Select Time Zone
        select#timeZone.form-control(name="book-zone")
          option(value="America/New_York") America/New_York
          option(value="Asia/Kolkata") Asia/Kolkata
          option(value="Asia/Shanghai") Asia/Shanghai
          option(value="Asia/Dubai") Asia/Dubai
          option(value="Europe/London") Europe/London
      button.btn.btn-primary(type="submit") Submit

.card.card-block
  .card-header Selected Time Slots
  .card-body
    #table.table.table-striped
      table.table.table-striped
        thead.thead-dark
